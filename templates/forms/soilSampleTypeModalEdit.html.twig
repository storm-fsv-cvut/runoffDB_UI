
    <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#soilSampleType">
        <i class="fa fa-pencil"></i>&nbsp;&nbsp;&nbsp;{% trans %}edit soil sample{% endtrans %}
    </button>

<div class="modal fade" id="soilSampleType">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{% trans %}edit soil sample{% endtrans %}</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.dateSampled) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.plot) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.sampleLocation) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.sampleDepthM) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.wrbSoilClass) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.dateProcessed) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.processedAt) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_row(form.rawData) }}
                            <p class="help-block">Max. 32MB, *.zip</p>
                        </div>
                    </div>
                </div>
               <div class="row">
                    <div class="form-group col-md-12">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#Run_{{ form.vars.value.getId() }}_descriptionCZ" data-toggle="tab" aria-expanded="true">{{ form_label(form.descriptionCZ) }}</a>
                                </li>
                                <li class="">
                                    <a href="#Run_{{ form.vars.value.getId() }}_descriptionEN" data-toggle="tab" aria-expanded="false">{{ form_label(form.descriptionEN) }}</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="Run_{{ form.vars.value.getId() }}_descriptionCZ">
                                    {{ form_widget(form.descriptionCZ) }}
                                </div>
                                <div class="tab-pane" id="Run_{{ form.vars.value.getId() }}_descriptionEN">
                                    {{ form_widget(form.descriptionEN) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.methodics) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning pull-left" data-dismiss="modal">
                    {% trans %}close{% endtrans %}
                </button>
                {{ form_row(form.save) }}
            </div>
        </div>
    </div>
</div>

