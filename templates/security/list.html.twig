{% set menu = 'user' %}
{% set submenu = 'list' %}

{% extends 'base.html.twig' %}
{% block title %}RunoffDB - {% trans %}Users{% endtrans %}{% endblock %}
{% block body %}
    <section class="content-header">
        <h1>
            {% trans %}Users{% endtrans %}
            <a href="{{ path('user') }}" class="btn btn-primary"><i></i> {% trans %}new{% endtrans %}</a>
        </h1>
    </section>

    <section class="content container-fluid">
        <div class="box">
            <div class="box box-primary">
                <div class="box-body">
                    {# total items count #}
                    <table class="table table-bordered table-hover table-striped">
                        {# table body #}
                        {% for entity in pagination %}
                            <tr {% if loop.index is odd %}class="color"{% endif %}>
                                <td>{{ entity.getId() }}</td>
                                <td>{{ entity}}</td>
                                <td>{{ entity.getOrganization()}}</td>
                                <td>{{ entity.getRole()|trans}}</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="{{ path('user',{id:entity.getId()}) }}"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-sm btn-danger" data-confirm="{% trans %}delete?{% endtrans %}"  href="{{ path('delete_user',{id:entity.getId()}) }}"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}

