{% set menu = 'cms' %}
{% set submenu = type %}

{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ type | trans }}
        </h1>
    </section>
    <section class="content container-fluid">
        <div class="box">
            <div class="box-header">
                {% if cms is not same as (null) and type == 'content'%}
                <a class="btn btn-sm btn-primary pull-right" target="_blank" href="{{ path('page',{'slug':cms.getSlug()}) }}"><i class="fa fa-eye"></i></a>
                {% endif %}
            </div>
            <div class="box-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.status) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {% if type == 'content' %}
                        {{ form_row(form.slug) }}
                        {% else %}
                            <label class="control-label required" for="cms_status">{{ 'slug-tooltip' | trans }}</label>
                            {{ form_widget(form.slug) }}
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {% if type == 'content' %}
                            {{ form_row(form.menuOrder) }}
                        {% else %}
                            <label class="control-label required" for="cms_status">{{ 'menuOrder-tooltip' | trans }}</label>
                            {{ form_widget(form.menuOrder) }}
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.language) }}
                    </div>
                </div>
                {% if type == 'content' %}
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.title) }}
                    </div>
                </div>
                {% endif %}
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.content, { 'attr': {'rows': '30'} }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.save) }}
                    </div>
                </div>
                {{ form_end(form,{'render_rest': false}) }}
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}
