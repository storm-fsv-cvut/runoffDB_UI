{% set menu = 'cms' %}
{% set submenu = type %}

{% extends 'base.html.twig' %}
{% block title %}RunoffDB - Cms{% endblock %}
{% block body %}
    <section class="content-header">
        <h1>
            {{ type|trans }}
            <a href="{{ path('cms',{'type':type}) }}" class="btn btn-primary"><i></i> {% trans %}new{% endtrans %}</a>
        </h1>
    </section>

    <section class="content container-fluid">
        <div class="box">
            <div class="box box-primary">
                <div class="box-body">
                    {# total items count #}
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th></th>
                        </tr>
                        </thead>
                        {# table body #}
                        {% for entity in pagination %}
                            <tr {% if loop.index is odd %}class="color"{% endif %}>
                                <td>{{ entity.getId() }}</td>
                                <td>{{ entity.getSlug()}}</td>
                                <td>{{ entity.getLanguage()}}</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="{{ path('cms',{'type':type,'id':entity.getId()}) }}"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-sm btn-primary" target="_blank" href="{{ path('page',{'slug':entity.getSlug()}) }}"><i class="fa fa-eye"></i></a>

                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}

