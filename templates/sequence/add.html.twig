{% set menu = 'sequence' %}
{% set submenu = 'add' %}

{% extends 'base.html.twig' %}
{% block title %}RunoffDB - {% trans %}add run{% endtrans %}{% endblock %}
{% block body %}
    <section class="content-header">
        <h1>
            {% trans %}add run{% endtrans %}
        </h1>
    </section>
    {% if (is_granted('edit')) %}
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{% trans %}add_sequence_header{% endtrans %}</h3>
            </div>
            {{form_start(form)}}
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-8">
                            {{ form_row(form.simulator) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form.date) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.projects) }}
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_row(form.save) }}
                </div>
        </div>
    </section>
{% endif %}
{% endblock %}
